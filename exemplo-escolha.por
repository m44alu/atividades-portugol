programa {
  funcao inicio() {
    //exemplo de escolha-caso
    inteiro numero
    escreva("digite um numero de 1 a 3; ")
    leia(numero)
    escolha(numero)
    {
      caso 1:
          escreva("escolheu a opçao 1\n")
      pare
      caso 2:
         escreva("escolheu a opçao 2\n")
         pare
         caso 3:
        escreva("escolheu a opçao 3\n")
        pare
        caso contrario:
        escreva("voce nao escolheu nenhuma das variacoes validas\n")
    }
  }
}
